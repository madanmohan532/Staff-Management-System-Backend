package training.iqgateway.admin.utils;

public class UserUtils {
	
	public static String generateUserId(String phone, String pincode) {
		if (phone == null || pincode == null) {
			throw new IllegalArgumentException("First name and last name cannot be null");
		}
		String userId = "SMS_User" + phone.substring(3,7) + "." + pincode.substring(3);
		return userId;
	}
}
